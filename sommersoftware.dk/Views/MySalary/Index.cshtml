@{
    ViewData["Title"] = "SommerSoftware";
}

<script type="text/javascript">
    function GoToDashboard() {
        /* Send the user to ~/Dashboard/Index if the user already have entered credentials */
        try {
            var str = window.localStorage.getItem('key');
        }
        catch(err) {
            window.location.href = "@Url.Action("Settings", "MySalary")";
        }
        if (str == null) {
            window.location.href = "@Url.Action("Settings", "MySalary")";
        }
        else {
            var url = '@Url.Action("Dashboard", "MySalary", new { settingsString = "__str__" })';
            window.location.href = url.replace('__str__', str);
        }
    }

</script>
<hr />
<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Welcome to MySalary Online!</h1>
            <p class="lead text-muted">MySalary is a platform for you to get better knowledge about your salary and work hours.</p>
            <p>
                <br />
                <button class="btn btn-primary my-2" onclick="GoToDashboard()">Go to dashboard</button>
                <a class="btn btn-secondary my-2" asp-area="" asp-controller="MySalary" asp-action="About">Learn more</a>
            </p>
        </div>
    </div>
</section>

<hr />
