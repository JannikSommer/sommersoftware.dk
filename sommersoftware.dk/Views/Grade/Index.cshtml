@{
    ViewData["Title"] = "Home Page";
}
<hr />
<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Welcome to Grade by SommerSoftware!</h1>
            <p class="lead text-muted">This website is for easy grade average calculations for Danish University students.</p>
            <p>
                <br />
                <a class="btn btn-primary my-2" asp-area="" asp-controller="Grade" asp-action="Dashboard">Get started</a>
                <a class="btn btn-secondary my-2" asp-area="" asp-controller="Grade" asp-action="About">Learn more</a>
            </p>
        </div>
    </div>
</section>

<hr />
<div class="container">
    <div class="row">
        <div class="col-md-4  py-2">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">Dashboard</h5>
                    <p class="card-text">Go to the dashboard to get started.</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="Grade" asp-action="Dashboard">Click here</a>
                </div>
            </div>
        </div>
        <div class="col-md-4  py-2">
            <div class="card h-100">
                <div class="card-body ">
                    <h5 class="card-title">Learn more</h5>
                    <p class="card-text">Learn more about the website here.</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="Grade" asp-action="About">Learn more</a>
                </div>
            </div>
        </div>
        <div class="col-md-4  py-2">
            <div class="card h-100">
                <div class="card-body ">
                    <h5 class="card-title">Get help</h5>
                    <p class="card-text">Stuck, confusing functionallity or other problems? Get help here. </p>
                    <a class="btn btn-primary" asp-area="" asp-controller="Grade" asp-action="Help">Get help</a>
                </div>
            </div>
        </div>
    </div>
</div>
